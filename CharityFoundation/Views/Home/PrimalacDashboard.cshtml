@{
    ViewData["Title"] = "Dashboard - Primalac pomoći";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <h2 class="card-title text-primary"><i class="bi bi-person-lines-fill"></i> Dobrodošli, Primalac pomoći!</h2>
            <p class="text-muted">Ovdje možete pregledati i upravljati vašim zahtjevima za pomoć.</p>

            <div class="d-flex justify-content-end mt-4">
                <a asp-controller="Zahtjev" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Novi Zahtjev
                </a>
            </div>

            <div class="mt-4">
                <a asp-controller="Zahtjev" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-list-check"></i> Pregledaj Zahtjeve
                </a>
            </div>
        </div>
    </div>
</div>
