@model CharityFoundation.Models.ZahtjevZaPomoc

@{
    ViewData["Title"] = "Brisanje Zahtjeva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Potvrda Brisanja</h4>
        </div>
        <div class="card-body">
            <p class="text-danger">Da li ste sigurni da želite obrisati ovaj zahtjev?</p>
            <dl class="row">
                <dt class="col-sm-3">Korisnik</dt>
                <dd class="col-sm-9">@Model.Korisnik?.Ime @Model.Korisnik?.Prezime</dd>

                <dt class="col-sm-3">Opis</dt>
                <dd class="col-sm-9">@Model.Opis</dd>

                <dt class="col-sm-3">Datum</dt>
                <dd class="col-sm-9">@Model.Datum.ToString("dd.MM.yyyy")</dd>

                <dt class="col-sm-3">Urgentnost</dt>
                <dd class="col-sm-9">
                    @{
                        var hitnost = Model.Urgentnost switch
                        {
                            1 => "Niska",
                            2 => "Srednja",
                            3 => "Visoka",
                            _ => "Nepoznata"
                        };
                    }
                    @hitnost
                </dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Obriši
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Nazad
                </a>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            border-radius: 1rem;
        }
        .card-header {
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }
    </style>
}
