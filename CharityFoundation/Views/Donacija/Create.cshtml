@model CharityFoundation.Models.Donacija

@{
    ViewData["Title"] = "Nova Donacija";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Nova Donacija</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="VrstaPomoci" class="form-label"></label>
                            <input asp-for="VrstaPomoci" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Iznos" class="form-label"></label>
                            <input asp-for="Iznos" class="form-control" type="number" step="0.01" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Nazad</a>
                            <button type="submit" class="btn btn-outline-primary">Doniraj</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
