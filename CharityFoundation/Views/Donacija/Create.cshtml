@* Donacija/Create.cshtml - unos nove donacije *@
@model CharityFoundation.Models.Donacija

@{
    ViewData["Title"] = "Nova Donacija";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Nova Donacija</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="VrstaPomoci" class="form-label"></label>
                            <input asp-for="VrstaPomoci" class="form-control" />
                            <span asp-validation-for="VrstaPomoci" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Iznos" class="form-label"></label>
                            <input asp-for="Iznos" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Iznos" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-outline-primary">Doniraj</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Nazad</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        body {
            background-color: #f4f9ff;
        }
        .card {
            border-radius: 1rem;
        }
        .card-header {
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }
    </style>
}
