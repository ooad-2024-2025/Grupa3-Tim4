@model CharityFoundation.Models.Akcija

@{
    ViewData["Title"] = "Brisanje Akcije";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Potvrda brisanja akcije</h4>
        </div>
        <div class="card-body">
            <p class="text-danger">Da li ste sigurni da želite obrisati ovu akciju?</p>

            <dl class="row">
                <dt class="col-sm-3">Naziv</dt>
                <dd class="col-sm-9">@Model.Naziv</dd>

                <dt class="col-sm-3">Opis</dt>
                <dd class="col-sm-9">@Model.Opis</dd>

                <dt class="col-sm-3">Datum</dt>
                <dd class="col-sm-9">@Model.Datum.ToString("dd.MM.yyyy")</dd>
            </dl>

            @if (Model.Ucesnici?.Any() == true)
            {
                <hr />
                <h5>Dodijeljeni volonteri:</h5>
                <ul>
                    @foreach (var ucesce in Model.Ucesnici)
                    {
                        <li>@ucesce.Volonter.Ime @ucesce.Volonter.Prezime (@ucesce.Volonter.Email)</li>
                    }
                </ul>
            }

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Obriši
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Nazad
                </a>
            </form>
        </div>
    </div>
</div>
