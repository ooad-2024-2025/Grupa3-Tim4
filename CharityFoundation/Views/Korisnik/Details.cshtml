@model CharityFoundation.Models.ApplicationUser

@{
    ViewData["Title"] = "Detalji korisnika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-person-vcard"></i> Detalji korisnika</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Ime</dt>
                <dd class="col-sm-9">@Model.Ime</dd>

                <dt class="col-sm-3">Prezime</dt>
                <dd class="col-sm-9">@Model.Prezime</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Tip korisnika</dt>
                <dd class="col-sm-9">@Model.TipKorisnika</dd>
            </dl>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Uredi
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Nazad
            </a>
        </div>
    </div>
</div>
