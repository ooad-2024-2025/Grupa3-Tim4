@model CharityFoundation.Models.ApplicationUser

@{
    ViewData["Title"] = "Brisanje korisnika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            border-radius: 1rem;
        }
        .card-header {
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }
    </style>
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Potvrda brisanja</h4>
        </div>
        <div class="card-body">
            <p class="text-danger">Da li ste sigurni da želite obrisati ovog korisnika?</p>
            <dl class="row">
                <dt class="col-sm-3">Ime</dt>
                <dd class="col-sm-9">@Model.Ime</dd>

                <dt class="col-sm-3">Prezime</dt>
                <dd class="col-sm-9">@Model.Prezime</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Tip korisnika</dt>
                <dd class="col-sm-9">@Model.TipKorisnika</dd>
            </dl>

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Obriši
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Nazad
                </a>
            </form>
        </div>
    </div>
</div>
